{% macro box(name, notifications=[]) %}
  <div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-body-tertiary" style="width: 400px;">
    <a href="/" class="d-flex align-items-center flex-shrink-0 p-3 link-body-emphasis text-decoration-none border-bottom">
      <span class="fs-5 fw-semibold">{{ name }}</span>
    </a>
    <div id="{{name}}" class="list-group list-group-flush border-bottom scrollarea">
      {% for n in notifications %}
        {{ notification(n) }}
      {% endfor %}
    </div>
  </div>
{% endmacro %}
{% macro notification(notification) %}
  <a href="#" class="notification list-group-item list-group-item-action py-3 lh-sm" aria-current="true">
    <div class="d-flex w-100 align-items-center justify-content-between">
      <strong class="mb-1">{{ notification.id.id }}</strong>
      <small>{% for t in notification.type %}{% if loop.first == false %}, {% endif %}{{ t.value | replace("https://www.w3.org/ns/activitystreams#", "") }}{% endfor %}</small>
    </div>
    <div class="col-10 mb-1 small">
      <dl class="row">
        <dt class="col-sm-3">Actor</dt>
        <dd class="col-sm-9">{{ notification.actor.id.value }}</dd>
        <dt class="col-sm-3">Object</dt>
        <dd class="col-sm-9">{{ notification.object.id.value }}</dd>
        <dt class="col-sm-3">In reply to</dt>
        <dd class="col-sm-9">{{ notification.inReplyTo.value }}</dd>
        <dt class="col-sm-3">Context</dt>
        <dd class="col-sm-9">{{ notification.context.value }}</dd>
      </dl>
      {# {% if notification.type | last  %}
      <div class="btn-group" role="group" aria-label="Basic example">
        <button type="button" class="btn btn-primary btn-rounded">Accept</button>
        <button type="button" class="btn btn-primary btn-rounded">Reject</button>
      </div>
      {% endif %} #}
    </div>
  </a>
{% endmacro %}
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta
    name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"> <!-- this is a link to the css file -->
    <link rel="stylesheet" href="/style.css"/> <!-- remember to include custom fonts - if you are using them -->
    <link href="https://fonts.googleapis.com/css2?family=Zilla+Slab:wght@700&display=swap" rel="stylesheet">
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous">
    <!-- title is a Nunjucks variable -->
    <title>{{ title }}</title>
  </head>
  <body>
    <!-- do you recognize Bootstrap classes? -->
    <main class="d-flex flex-nowrap">
      <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark" style="width: 280px;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <span class="fs-4">{{ type }}</span>
        </a>
        <hr>
        {% include "profile.njk" %}
        <hr>
        {% include "pod.njk" %}
        <hr>
        {% include "participants.njk" %}
      </div>
      {# <div class="b-example-divider b-example-vr"></div> #}
      {{ box("Sent", outbox) }}
      {# <div class="b-example-divider b-example-vr"></div> #}
      {{ box("Received", inbox) }}
    </main>
    <!-- Optional JavaScript -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
      integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
      crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
      integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
      crossorigin="anonymous"></script>
  </body>
</html>